<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:elevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameHomeTextView"
            android:layout_marginLeft="10dp"
            android:textSize="24dp"
            android:text="Main Text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="150dp"
            android:id="@+id/imageViewHome"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/njitlogo"
            android:layout_below="@id/nameHomeTextView"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/homeDescriptionTextView"
            android:layout_below="@+id/imageViewHome"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="Description Text"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/locationHomeTextView"
            android:textSize="12dp"
            android:layout_below="@id/homeDescriptionTextView"
            android:text="Location"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="School"
            android:textSize="14sp"
            android:layout_below="@id/locationHomeTextView"
            android:id="@+id/schoolHomeTextView"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>