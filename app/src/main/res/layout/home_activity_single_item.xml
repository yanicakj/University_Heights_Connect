<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:elevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:id="@+id/imageViewHome"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewHome"
            android:layout_toRightOf="@id/imageViewHome"
            android:layout_marginLeft="10dp"
            android:textSize="24dp"
            android:text="Main Text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeDescription"
            android:layout_below="@+id/textViewHome"
            android:layout_toRightOf="@id/imageViewHome"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="Description Text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewClick"
            android:textSize="12dp"
            android:layout_below="@id/homeDescription"
            android:layout_alignBottom="@id/imageViewHome"
            android:text="Click Text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>