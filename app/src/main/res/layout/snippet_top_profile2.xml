<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relLayoutTop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:weightSum="100"
            android:id="@+id/linLayout">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="50">

                <TextView
                    android:id="@+id/tvClasses2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="48dp"
                    android:text="24"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/textClasses2"
                    android:layout_width="45dp"
                    android:layout_height="15dp"
                    android:text="Classes"
                    android:layout_toRightOf="@id/tvClasses2"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="50">

                <ImageView
                    android:id="@+id/ivSchool2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/ecclogo"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                   />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


        <TextView
            android:id="@+id/textEditProfile"
            android:layout_width="197dp"
            android:layout_height="21dp"
            android:text="Edit Your Profile"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textAlignment="center"
            android:background="@drawable/grey_border"
            android:layout_below="@id/relLayoutTop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />


    </RelativeLayout>



</merge>